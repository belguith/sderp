<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="sderp-ejb">
		<jta-data-source>java:jboss/datasources/erp</jta-data-source>
		<class>entities.Account</class>
		<class>entities.DeliveryOrder</class>
		<class>entities.DeliveryOrderLine</class>
		<class>entities.Inventory</class>
		<class>entities.Invoice</class>
		<class>entities.InvoiceLine</class>
		<class>entities.InvoicePayment</class>
		<class>entities.InvoiceTax</class>
		<class>entities.Journal</class>
		<class>entities.JournalEntry</class>
		<class>entities.JournalItem</class>
		<class>entities.Partner</class>
		<class>entities.Payment</class>
		<class>entities.Product</class>
		<class>entities.ProductCategory</class>
		<class>entities.ProductUom</class>
		<class>entities.ProductUomCategory</class>
		<class>entities.PurchaseOrder</class>
		<class>entities.PurchaseOrderLine</class>
		<class>entities.SaleOrder</class>
		<class>entities.SaleOrderLine</class>
		<class>entities.Tax</class>
		<class>entities.User</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create-drop"/>
		</properties>
	</persistence-unit>
</persistence>
